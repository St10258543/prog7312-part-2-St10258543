@model MunicipalityApp.Models.Events

<div class="container mt-5">
    <!-- Card to display event details -->
    <div class="card shadow-lg border-0 rounded-4 p-4">

        <!-- Event Title -->
        <h2 class="text-primary">@Model.Title</h2>

        <!-- Event Date and Category -->
        <p class="text-muted">
            @Model.Date.ToString("MMMM dd, yyyy") | @Model.Category
        </p>

        <!-- Event Description -->
        <p>@Model.Description</p>

        <!-- Back button to return to events listing -->
        <a asp-controller="Events" asp-action="Index" class="btn btn-outline-primary mt-3">
            Back to Events
        </a>
    </div>
</div>
